@model MediaRepo.Models.Movie
@{
    ViewBag.Title = "GetMovie";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: Courier-New;
            border-collapse: collapse;
            width: 100%;
        }

        td{
            border: 3px solid;
            text-align: left;
            padding: 8px;
            font-size: large;
        }

        th {
            border: 3px solid;
            text-align: center;
            padding: 8px;
            font-size: large;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
@using (Html.BeginForm("GetMovie", "Movie"))
{ 
    <h2></h2>
    <tr>
        <td>
            <h4 align="center"> @Html.ActionLink("Search Again", "Search")</h4>
        </td>
    </tr>
    <h2></h2>
}
        <table>
        <tr>
            <th>Movie Poster</th>
            <th Col colspan="2">Parameters</th>
        </tr>
        <tr>
